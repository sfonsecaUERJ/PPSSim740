<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DDLSchema/DDLSchema.xsd">
 
<RotationSection label="PPSRot.xml">
<!--  -->
<!--%%%%%%%%%%%  PPS rotations -->

 <Rotation name="PPSMAIN" thetaX="90*deg"    phiX="0*deg"     thetaY="90*deg"    phiY="90*deg"    thetaZ="0*deg"      phiZ="0*deg" />

 <Rotation name="PPS90"   thetaX="90.0*deg"  phiX="0.0*deg"   thetaY="0.0*deg"  phiY="0.0*deg"   thetaZ="90.0*deg"  phiZ="270.*deg" />

 <Rotation name="PPSR090" thetaX="90*deg"    phiX="90*deg"     thetaY="90*deg"   phiY="180*deg"   thetaZ="0*deg"      phiZ="0*deg" />

 <Rotation name="PPS90Y"  thetaX="180.0*deg" phiX="0.0*deg"   thetaY="90.0*deg" phiY="90.0*deg" thetaZ="90.0*deg"   phiZ="0.*deg" />

 <Rotation name="PPS90Y2" thetaX="90.0*deg"  phiX="180.0*deg" thetaY="90.0*deg" phiY="90.0*deg" thetaZ="180.0*deg" phiZ="0.*deg" />

 <Rotation name="PPSR270" thetaX="90*deg"    phiX="-90*deg"    thetaY="90*deg"    phiY="0*deg"    thetaZ="0*deg"       phiZ="0*deg" />

 <Rotation name="PPSM180" thetaX="90*deg"    phiX="270*deg"    thetaY="90*deg"    phiY="180*deg" thetaZ="180*deg"     phiZ="0*deg" />

 <Rotation name="PPSX180" thetaX="90*deg"    phiX="-90*deg"     thetaY="90*deg"    phiY="180*deg"    thetaZ="180*deg"    phiZ="0*deg" />

 <Rotation name="PPSZ180" thetaX="90*deg"    phiX="0*deg"     thetaY="90*deg"    phiY="270*deg"    thetaZ="180*deg"    phiZ="0*deg" />

 <Rotation name="PPSX090" thetaX="90*deg"    phiX="90*deg"     thetaY="90*deg"    phiY="0*deg"    thetaZ="180*deg"    phiZ="0*deg" />

</RotationSection>
 
</DDDefinition>
